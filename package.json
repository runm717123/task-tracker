{
	"name": "ndev-task-tracker",
	"description": "A task tracker extension, designed for quick task tracking",
	"private": true,
	"version": "0.5.2",
	"type": "module",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"build": "cross-env WXT_ENV=dev wxt build",
		"build:prod": "cross-env WXT_ENV=prod wxt --mode production build && wxt --mode production zip",
		"build:firefox": "wxt build -b firefox",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"postinstall": "wxt prepare",
		"dev:watch": "nodemon --exec \"pnpm run build\"",
		"test": "vitest",
		"test:ui": "vitest --ui"
	},
	"nodemonConfig": {
		"ignore": [
			"**/test/**",
			"**/docs/**"
		],
		"watch": [
			"src",
			"wxt.config.ts"
		],
		"ext": "ts,js,svelte,json,css",
		"delay": 1000
	},
	"devDependencies": {
		"@tsconfig/svelte": "^5.0.4",
		"@types/chrome": "^0.0.329",
		"@vitest/ui": "^3.2.4",
		"@wxt-dev/module-svelte": "^2.0.3",
		"cross-env": "^7.0.3",
		"svelte": "^5.28.2",
		"svelte-check": "^4.1.6",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4",
		"wxt": "^0.20.6"
	},
	"dependencies": {
		"@bios-ui/core": "link:../bios-ui/packages/core",
		"@bios-ui/svelte": "link:../bios-ui/packages/svelte",
		"@lucide/svelte": "^0.525.0",
		"@tailwindcss/vite": "^4.1.11",
		"@tensorflow-models/universal-sentence-encoder": "^1.3.3",
		"@tensorflow/tfjs": "^4.22.0",
		"dayjs": "^1.11.13",
		"flatpickr": "^4.6.13",
		"tailwindcss": "^4.1.11"
	}
}
